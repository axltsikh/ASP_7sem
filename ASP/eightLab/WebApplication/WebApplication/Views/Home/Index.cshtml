    </div>
    <div style="margin-left: 50px; margin-right: 50px;">
        <button id="errorExitButton">ErrorExit</button>
        <div id="errorExit"></div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript">
</script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript">
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#getMButton").click(function () {
            k = document.getElementById("getMK").value;
            var payload = {
                Jsonrpc: "2.0",
                Method: "GetM",
                Id: "1",
                Params: [
                    k
                ]
            };
            $.ajax({
                url: 'https://localhost:44348/api/Home/executeSingle',
                method: 'POST',
                data: payload,
                success: function (data) {
                    $('#getM').html("Result: " + JSON.stringify(data));
                },
                xhrFields: {
                    withCredentials:true
                }
            });
        });
